<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Snoway</name>
    <description>
        ! Collegiate Project! A simple mobile application listing different trails in Quebec and that makes it easy to go there
    </description>
    <author email="maxence.schroeder@gmail.com" href="https://maxence.schroeder.xyz">
        Atchoum software
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="http://51.222.140.74:3000/" />
    <preference name="loglevel" value="DEBUG" />
    <feature name="GPSLocation">
        <param name="android-package" value="fr.louisbl.cordova.gpslocation.CordovaGPSLocation" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
</widget>
