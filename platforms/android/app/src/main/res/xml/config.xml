<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.snoway" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Snoway</name>
    <description>
        ! Collegiate Project! A simple mobile application listing different trails in Quebec and that makes it easy to go there
    </description>
    <author email="maxence.schroeder@gmail.com" href="https://maxence.schroeder.xyz">
        Atchoum software
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/iconsforsnoway.png" />
        <icon src="res/iconsforsnoway.png" density="ldpi"/>
        <icon src="res/iconsforsnoway.png" density="mdpi"/>
        <icon src="res/iconsforsnoway.png" density="hdpi"/>
        <icon src="res/iconsforsnoway.png" density="xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/iconsforsnoway.png" />
</widget>
